# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.html]
indent_style = tab
indent_size = unset

[*.njk]
indent_style = tab
indent_size = unset

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.scss]
indent_style = tab
indent_size = unset

[*.js]
indent_style = tab
indent_size = unset
quote_type = single
