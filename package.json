{
  "name": "web",
  "version": "1.0.0",
  "description": "personal web site",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "prettier": "prettier --ignore-unknown \"**/*.{html,njk,md,scss,js}\"",
    "prettier:check": "npm run prettier -- --check",
    "prettier:write": "npm run prettier -- --write",
    "pretty-quick": "pretty-quick --staged --pattern \"**/*.{html,njk,md,scss,js}\"",
    "pretty-quick:check": "npm run pretty-quick -- --check",
    "pretty-quick:write": "npm run pretty-quick -- --write",
    "clear": "rimraf dist",
    "prebuild": "run-s clear",
    "build:11ty": "eleventy",
    "build": "run-s build:*",
    "preserve": "run-s clear",
    "serve:11ty": "eleventy --serve --port 4200",
    "serve": "run-p serve:*",
    "start": "run-s serve"
  },
  "author": "Maksim Kulichenka <maksim.kulichenka@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "commitlint": "^17.6.3",
    "eleventy-sass": "^2.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "markdown-it": "^13.0.1",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-container": "^3.0.0",
    "markdown-it-deflist": "^2.1.0",
    "markdown-it-kbd": "^2.2.2",
    "markdown-it-mark": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.0"
  }
}
